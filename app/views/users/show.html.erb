<div>

    <h1>Welcome to Users#show (Your profile page)!</h1> <br>

    <%if user_signed_in?%>
        <%= link_to 'New Event', new_event_path, class: "btn btn-primary" %><br>
        Created the following events:<br>
        <%unless @created_events.nil?%>
            <% @created_events.each do | event | %>
                <strong><%= event.title %><br></strong>
                <small><%= event.body %><br></small>
                <br>
            <%end%>
        <%end%>

        <br><br>
        Attending the following events: <br>
        <%unless @attended_events.nil?%>
            <% @attended_events.each do | event | %>
                <strong><%= event.title %><br></strong>
                <small><%= event.body %><br></small>
                <br>
            <%end%>
        <%end%>
    <%else%>
        Please sign in to create events and view your created events
    <%end%>

</div>